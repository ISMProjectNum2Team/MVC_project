
@model IEnumerable<TestMVC.Models.EventViewModel>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Event</th>
            <th>Description</th>
            <th>Location</th>
            <th>Date(from)</th>
            <th>Date (to)</th>
            <th></th>
        </tr>
    </thead> 
    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.Location</td>
                    <td>@item.DateFrom.ToString()</td>
                    <td>@item.DateTo.ToString()</td>
                    <td>@Html.ActionLink("Details", "Details", "Events", new { id = item.ID }, new { @class = "btn btn-default" })</td>
                </tr>
            }
        }
    </tbody>
</table>
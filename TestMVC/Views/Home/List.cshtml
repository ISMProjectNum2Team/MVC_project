@using TestMVC.Models;
@model ListModel
@{
    ViewBag.Title = "List";
}
<link href="~/home/style.css" rel="stylesheet" />
<link rel="stylesheet" href="https://bootswatch.com/cosmo/bootstrap.min.css" />
<h2>List</h2>
<a href="/home/index">HOME</a> | <a href="/home/addevent">ADD NEW EVENT</a> | <a href="/home/list">EVENTS</a>
<ul>
    @{
        var counter = 0;
        foreach (var item in ListModel.getEventList())
	    {
            counter++;
		    <li><a href="/home/details?id=@counter">@item.title @item.description = @item.location</a></li>
	    }    
    }
    
</ul>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://bootswatch.com/cosmo/bootstrap.min.css" />
    <link href="~/content/style.css" rel="stylesheet" />
</head>
  
<body>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">@ViewBag.Title</a>
                </div>

                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        @{
                            string routeName = ViewContext.RouteData.DataTokens.Values.ElementAt(0).ToString();
                            @NavigationLink("HOME", "Home", @routeName)
                            @NavigationLink("ADD EVENT", "AddEvent", @routeName)
                            @NavigationLink("EVENTS", "Events", @routeName)
                        }
                    </ul>
                </div>
            </div>
        </nav>

    @RenderBody()

    <script src="~/scripts/jquery-1.8.3.js"></script>
    <script src="~/scripts/jquery.validate.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>

@helper NavigationLink(string linkName, string routeName, string currentRouteName)
{
    if (string.Equals(routeName, currentRouteName, StringComparison.InvariantCultureIgnoreCase))
    {
        <div class="navbar-header">
            <a class="navbar-brand" href="#">@linkName</a>
        </div>
    }
    else
    {
        <li>
            @Html.RouteLink(@linkName, routeName)
        </li>
    }
}